<%= form_with model: @chat do |form| %>
  <%= form.label :sender_id, "Sender" %>
  <%= form.select :sender_id, User.all.collect { |u| [u.email, u.id] } %><br>

  <%= form.label :receiver_id, "Receiver" %>
  <%= form.select :receiver_id, User.all.collect { |u| [u.email, u.id] } %><br>
  <%= form.submit "Update" %>
<% end %>
