<div class="container mt-5">
  <h1>Contact Us</h1>
  <p>Ssend us a message.</p>

  <% if flash[:notice] %>
    <div class="alert alert-success mt-3">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: contact_path, method: :post, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :message, "Message", class: "form-label" %>
      <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-primary" %>
  <% end %>

</div>
